{
  "compilerOptions": {
    "target": "ES6",
    "module": "ESNext",
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@tests/*": [ "./__tests__/*" ],

    }
  },
  "include": [
    "src/**/*"
, "setupTests.tsx"  ],
  "exclude": [
    "node_modules"
  ]
}